@model CardViewModel

<div class="container">
    <div class="row h-100">
        <h4 class="pt-2">Görevi Düzelt</h4>
        <div class="col-sm-12 my-auto">
            <form method="post" asp-action="Edit" asp-controller="Card" class="p-3 w-75 ms-auto" enctype="multipart/form-data">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Title"></span>
                    <input class="form-control" placeholder="Task Adı" type="text" asp-for="@Model.Title">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Description"></span>
                    <input class="form-control" placeholder="Açıklama" type="text" asp-for="@Model.Description">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Note"></span>
                    <textarea class="form-control" placeholder="Not" asp-for="@Model.Note" rows="3"></textarea>
                </div>
                <input type="hidden" asp-for="@Model.Id"/>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
