@model AddCard
@{ ViewData["Title"] = "AddCard"; }

@section Styles{
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        body {
            background-color: #8C5245;
        }
    </style>
}

<div class="container">
    <div class="row h-100">
        <h4 class="pt-2">Görev Ekle</h4>
        <div class="col-sm-12 my-auto">
            <form method="post" asp-action="AddCard" asp-controller="Board" class="p-3 w-75 ms-auto" enctype="multipart/form-data">
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Title"></span>
                    <input class="form-control" placeholder="Task Adı" type="text" asp-for="@Model.Title">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Description"></span>
                    <input class="form-control" placeholder="Açıklama" type="text" asp-for="@Model.Description">
                </div>
                <div class="form-group">
                    <span class="text-danger" asp-validation-for="@Model.Note"></span>
                    <textarea class="form-control" placeholder="Not" asp-for="@Model.Note" rows="3"></textarea>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>



